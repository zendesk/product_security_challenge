<div class="login-form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2 class="text-center">Log in</h2>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Username", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
    </div>

    <div class="clearfix">
      <% if devise_mapping.rememberable? %>
        <%= f.label :remember_me, "Remember me", class: "pull-left checkbox-inline" do %>
          <%= f.check_box :remember_me %>
          Remember me
        <% end %>
      <% end %>

      <%= link_to "Forgot Password?", new_user_password_path, class: "pull-right" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
